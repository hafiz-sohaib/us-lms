<%- include('../../../layout/header'); %>
<%- include('../../components/mobile-nav'); %>
<%- include('../../components/sidebar'); %>


<main class="content" id="current_path" data-path="/admin<%= path %>">
    <%- include('../../components/navbar'); %>

    <!-- ========== Add / Update Student Modal ========== -->
    <div class="modal fade" id="student-modal" tabindex="-1" aria-labelledby="student-modal" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">

                <form id="student_form">
                    <div class="modal-header">
                        <h2 class="h6 modal-title">Add New Student</h2><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="student_roll_number">Student Roll Number</label>
                            <input type="hidden" name="student_id" />
                            <input type="text" class="form-control" name="student_roll_number" id="student_roll_number" aria-describedby="roll_error" required />
                            <small id="roll_error" class="form-text text-danger"></small>
                        </div>

                        <div class="mb-3">
                            <label for="student_name">Student Name</label>
                            <input type="text" class="form-control" name="student_name" id="student_name" aria-describedby="name_error" minlength="3" required />
                            <small id="name_error" class="form-text text-danger"></small>
                        </div>

                        <div class="mb-3">
                            <label for="student_email">Student Email</label>
                            <input type="email" class="form-control" name="student_email" id="student_email" aria-describedby="email_error" required />
                            <small id="email_error" class="form-text text-danger"></small>
                        </div>

                        <div class="mb-3">
                            <label for="student_phone">Student Phone</label>
                            <input type="text" class="form-control" name="student_phone" id="student_phone" aria-describedby="phone_error" pattern="03[0-9]{2}-(?!1234567)(?!1111111)(?!7654321)[0-9]{7}" required />
                            <small id="phone_error" class="form-text text-danger"></small>
                        </div>

                        <div class="mb-3">
                            <label for="student_cnic">Student CNIC#</label>
                            <input type="text" class="form-control" name="student_cnic" id="student_cnic" aria-describedby="cnic_error" pattern="[0-9]{5}-[0-9]{7}-[0-9]{1}" required />
                            <small id="cnic_error" class="form-text text-danger"></small>
                        </div>

                        <div class="mb-3">
                            <label for="student_year">Student Year</label>
                            <input type="number" class="form-control" name="student_year" id="student_year" aria-describedby="year_error" required />
                            <small id="year_error" class="form-text text-danger"></small>
                        </div>

                        <div>
                            <label for="student_address">Student Address</label>
                            <textarea class="form-control" name="student_address" id="student_address" rows="4" aria-describedby="address_error" required></textarea>
                            <small id="address_error" class="form-text text-danger"></small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-secondary">Save Student</button>
                        <button type="button" class="btn btn-link text-gray-600 ms-auto" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- ========== View Student Modal ========== -->
    <div class="modal fade" id="student-view-modal" tabindex="-1" aria-labelledby="student-view-modal" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="h6 modal-title">View Student</h2><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Student Roll Number</label>
                        <output class="form-control" id="v_student_roll_number"></output>
                    </div>

                    <div class="mb-3">
                        <label>Student Name</label>
                        <output class="form-control" id="v_student_name"></output>
                    </div>

                    <div class="mb-3">
                        <label>Student Email</label>
                        <output class="form-control" id="v_student_email"></output>
                    </div>

                    <div class="mb-3">
                        <label>Student Phone</label>
                        <output class="form-control" id="v_student_phone"></output>
                    </div>

                    <div class="mb-3">
                        <label>Student CNIC#</label>
                        <output class="form-control" id="v_student_cnic"></output>
                    </div>

                    <div class="mb-3">
                        <label>Student Year</label>
                        <output class="form-control" id="v_student_year"></output>
                    </div>

                    <div>
                        <label>Student Address</label>
                        <output class="form-control" id="v_student_address"></output>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary ms-auto" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


    <!-- ========== Create Student Credentials Modal ========== -->
    <div class="modal fade" id="credentials-modal" tabindex="-1" aria-labelledby="credentials-modal" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">

                <form id="credential_form">
                    <div class="modal-header">
                        <h2 class="h6 modal-title">Create Student Credentials</h2><button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="full_name">Select Student</label>
                            <input type="hidden" name="full_name" />
                            <select class="form-select" id="full_name" aria-describedby="full_name_error" required></select>
                            <small id="full_name_error" class="form-text text-danger"></small>
                        </div>

                        <div class="mb-3">
                            <label for="username">Username</label>
                            <input type="text" class="form-control" name="username" id="username" aria-describedby="username_error" minlength="3" required />
                            <small id="username_error" class="form-text text-danger"></small>
                        </div>

                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="email" id="email" aria-describedby="emaill_error" required readonly />
                            <small id="emaill_error" class="form-text text-danger"></small>
                        </div>

                        <div class="mb-3">
                            <label for="password">Password</label>
                            <input type="text" class="form-control" name="password" id="password" aria-describedby="password_error" required />
                            <small id="password_error" class="form-text text-danger"></small>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-secondary">Create Credentials</button>
                        <button type="button" class="btn btn-link text-gray-600 ms-auto" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div class="py-4">
        <h1 class="h4 mb-0">Manage Students</h1>
    </div>


    <div class="row">
        <div class="col-12 mb-5">
            <div class="card border-0 shadow components-section">
                <div class="card-body">
                    <div class="d-flex justify-content-between w-100 flex-wrap mb-4">
                        <h5 class="h5 mb-0">Show All Students</h5>
                        <div class="d-flex align-items-center" style="width: 442px;">
                            <input type="text" class="form-control me-3" id="search_box" placeholder="Search..." style="width: 250px;" />
                            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#student-modal">
                                <i class="fa-solid fa-plus me-2"></i>
                                Add New Student
                            </button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0 rounded">
                            <thead class="thead-dark">
                                <tr class="text-center">
                                    <th class="border-0 rounded-start">#</th>
                                    <th class="border-0">Student Name</th>
                                    <th class="border-0">Student Email</th>
                                    <th class="border-0">Student Roll</th>
                                    <th class="border-0">Student Year</th>
                                    <th class="border-0">Student Phone</th>
                                    <th class="border-0">Student CNIC#</th>
                                    <th class="border-0 rounded-end">Action</th>
                                </tr>
                            </thead>
                            <tbody id="display_students"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 mb-5">
            <div class="card border-0 shadow components-section">
                <div class="card-body">
                    <div class="d-flex justify-content-between w-100 flex-wrap mb-4">
                        <h5 class="h5 mb-0">Show Students Credentials</h5>
                        <div class="d-flex align-items-center" style="width: 508px;">
                            <input type="text" class="form-control me-3" id="cred_search_box" placeholder="Search..." style="width: 250px;" />
                            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#credentials-modal">
                                <i class="fa-solid fa-plus me-2"></i>
                                Create Student Credentials
                            </button>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-centered table-nowrap mb-0 rounded">
                            <thead class="thead-dark">
                                <tr class="text-center">
                                    <th class="border-0 rounded-start">#</th>
                                    <th class="border-0">Full Name</th>
                                    <th class="border-0">Username</th>
                                    <th class="border-0">Email</th>
                                    <th class="border-0">Password</th>
                                    <th class="border-0">Role</th>
                                    <th class="border-0 rounded-end">Action</th>
                                </tr>
                            </thead>
                            <tbody id="display_credentials"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../components/footer'); %>
</main>


<%- include('../../../layout/footer'); %>
<script src="/admin/pages/students/students.js"></script>